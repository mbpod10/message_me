<h1 class="center login-h1"> Welcome to MessageMe - <em> a complete Chat app </em> </h1>

<h2 class="ui center medium aligned icon header">
  <i class="circular orange power icon"></i>
  Log In To Continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">

        <%= form_with(scope: :session, url: login_path, local: true)  do |form| %>

          <div class="field">            
            <%= form.label :username %>
            <div class="ui left icon input">              
              <%= form.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>          
          </div>

          <div class="field">
            <%= form.label :password %>
            <div class="ui left icon input">
              <%= form.text_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>

          <%= form.button "Log In", class: "ui orange submit button login-button" %>           

        <% end %>

      </div>
    </div>
    
    <div class="middle aligned column">
      <%= link_to signup_path, :action => 'go' do %>
        <div class="ui orange big button"> <i class="signup icon"></i> Sign Up </div>
      <% end %>
    </div>
    

  </div>
  <div class="ui vertical divider"> Or</div>
</div>